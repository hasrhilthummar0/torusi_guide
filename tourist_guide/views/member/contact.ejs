    <body>
        <style>
            ul.about-list1 {
                display: block;
            }

            /* --- General Styles --- */
            body {
                font-family: 'Poppins', sans-serif;
                margin: 0;
                background-color: #fdfdff;
                color: #333;
            }

            .container {
                max-width: 1140px;
                margin: 0 auto;
                padding: 0 20px;
            }

            /* --- Top Info Section --- */
            .top-info-section {
                background-color: #f96f18;
                /* Main Orange Color */
                padding: 50px 0;
                margin: 150px;
            }

            .info-cards-wrapper {
                display: flex;
                justify-content: space-between;
                gap: 25px;
            }

            .info-card {
                background-color: #ffffff;
                border-radius: 10px;
                padding: 25px 30px;
                display: flex;
                align-items: center;
                flex-grow: 1;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
            }

            .info-card .icon {
                width: 55px;
                height: 55px;
                background-color: #f96f18;
                color: #ffffff;
                border-radius: 50%;
                display: flex;
                justify-content: center;
                align-items: center;
                font-size: 22px;
                margin-right: 20px;
                flex-shrink: 0;
            }

            .info-card h4 {
                margin: 0 0 5px 0;
                font-size: 1.1rem;
                font-weight: 600;
            }

            .info-card p {
                margin: 0;
                font-size: 0.9rem;
                color: #666;
                line-height: 1.5;
            }

            /* --- Form Section --- */
            .form-section {
                padding: 80px 0;
            }

            .form-header {
                text-align: center;
                margin-bottom: 50px;
            }

            .form-header .subtitle {
                color: #f96f18;
                font-weight: 600;
                margin-bottom: 10px;
            }

            .form-header h2 {
                font-size: 2.8rem;
                font-weight: 700;
                margin: 0;
                color: #111;
            }

            .form-header .description {
                max-width: 600px;
                margin: 15px auto 0 auto;
                color: #777;
            }

            .contact-form .form-row {
                display: flex;
                gap: 25px;
                margin-bottom: 25px;
            }

            .contact-form .form-group {
                width: 100%;
            }

            .contact-form input,
            .contact-form textarea {
                width: 100%;
                padding: 15px;
                border: 1px solid #e0e0e0;
                border-radius: 8px;
                font-size: 1rem;
                font-family: 'Poppins', sans-serif;
                box-sizing: border-box;
                /* Important for padding and width */
            }

            .contact-form input:focus,
            .contact-form textarea:focus {
                outline: none;
                border-color: #f96f18;
            }

            .contact-form textarea {
                height: 150px;
                resize: vertical;
            }

            .btn-wrapper {
                text-align: center;
                margin-top: 30px;
            }

            .btn-submit {
                background-color: #f96f18;
                color: #ffffff;
                border: none;
                padding: 15px 40px;
                font-size: 1rem;
                font-weight: 600;
                border-radius: 8px;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

            .btn-submit:hover {
                background-color: #e0600d;
            }

            /* Responsive adjustments */
            @media (max-width: 992px) {
                .info-cards-wrapper {
                    flex-direction: column;
                }
            }

            @media (max-width: 768px) {
                .contact-form .form-row {
                    flex-direction: column;
                    gap: 25px;
                    margin-bottom: 0;
                }

                .contact-form .form-group {
                    margin-bottom: 25px;
                }
            }
        </style>
