<!DOCTYPE html>
<html class="no-js" lang="en">
<%- include('../common_pages/head') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<body>
    <style>
          .tour-card-link, .tour-card-link:hover {
        text-decoration: none; /* Link ni niche ni line kadhi nakhshe */
        color: inherit; /* Link no color parent jevo j rakhe chhe */
    }
        /* Tamari CSS styles ahiya raheshe... (No Change) */
        ul.about-list1 {
            display: block;
        }
        .tour-card {
            position: relative;
            overflow: hidden;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }
        .tour-card__img {
            position: relative;
            display: block;
        }
        .tour-card__img img {
            width: 100%;
            height: 450px;
            object-fit: cover;
            display: block;
            transition: transform 0.4s ease;
        }
        .tour-card:hover .tour-card__img img {
            transform: scale(1.05);
        }
        .tour-card__content {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: #F97316;
            padding: 20px 25px;
            color: #ffffff;
            width: 100%;
        }
        .tour-card__title {
            font-size: 24px;
            font-weight: 700;
            color: #ffffff;
            margin: 0 0 5px 0;
        }
        .tour-card__text {
            font-size: 16px;
            color: #ffffff;
            margin: 0;
            font-weight: 400;
        }
    </style>
    
    <%- include('../common_pages/header') %>

    <div class="breadcumb-wrapper" data-bg-src="/img/breadcumb/breadcumb-bg.jpg">
        <div class="container z-index-common">
            <div class="breadcumb-content">
                <h1 class="breadcumb-title">Top Tourist Places</h1>
                <div class="breadcumb-menu-wrap">
                    <ul class="breadcumb-menu">
                        <li><a href="/">Home</a></li>
                        <li>Top Tourist Places</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
 <section class="space-top space-extra-bottom">
    <div class="container">
        <div class="row">
            <% if (places && places.length > 0) { %>
                <% places.forEach(place => { %>
                    <a href="/tourist-places/<%= place.id %>" class="col-lg-4 col-md-6 mb-4 tour-card-link">
                        <div class="tour-card">
                            <div class="tour-card__img">
                                <img src="<%= place.image %>" alt="<%= place.title %>">
                            </div>
                            <div class="tour-card__content">
                                <h3 class="tour-card__title"><%= place.title %></h3>
                                <p class="tour-card__text"><%= place.slogan %></p>
                            </div>
                        </div>
                    </a>
                <% }); %>
            <% } else { %>
                <div class="col-12 text-center">
                    <h2>No Tourist Place Available</h2>
                </div>
            <% } %>
        </div>
    </div>
</section>
     <%- include('../common_pages/footer') %>

    <script src="/js/vendor/jquery-3.6.0.min.js"></script>
    <script src="/js/slick.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.magnific-popup.min.js"></script>
    <script src="/js/jquery-ui.min.js"></script>
    <script src="/js/circle-progress.min.js"></script>
    <script src="/js/imagesLoaded.js"></script>
    <script src="/js/isotope.js"></script>
    <script src="/js/wow.min.js"></script>
    <script src="/js/main.js"></script>
</body>

</html>