<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>
        <%= title %>
    </title>
    <meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no" name="viewport" />
    <link rel="icon" href="/admin/img/kaiadmin/favicon.ico" type="image/x-icon" />

    <script src="/admin/js/plugin/webfont/webfont.min.js"></script>
    <script>
        WebFont.load({
            google: { families: ["Public Sans:300,400,500,600,700"] },
            custom: {
                families: [
                    "Font Awesome 5 Solid",
                    "Font Awesome 5 Regular",
                    "Font Awesome 5 Brands",
                    "simple-line-icons",
                ],
                urls: ["/admin/css/fonts.min.css"],
            },
            active: function () {
                sessionStorage.fonts = true;
            },
        });
    </script>

    <link rel="stylesheet" href="/admin/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/admin/css/plugins.min.css" />
    <link rel="stylesheet" href="/admin/css/kaiadmin.min.css" />
</head>

<body>
    <div class="wrapper">

<div class="wrapper">
    <%- include('partials/sidebar') %>
    <div class="main-content">
        <%- include('partials/navbar') %>

        <div class="container-fluid p-3">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="page-title">Pending Associate Approvals</h2>
            </div>

            <!-- Table -->
            <div class="table-responsive shadow p-3 bg-white rounded">
                <table class="table table-striped table-bordered align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Organization Type</th>
                            <th>Logo</th>
                            <th>Visiting Card</th>
                            <th>Registered At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (associates.length > 0) { %>
                            <% associates.forEach(associate => { %>
                                <tr>
                                    <td><%= associate.id %></td>
                                    <td><%= associate.name %></td>
                                    <td><%= associate.email %></td>
                                    <td><%= associate.organizationType %></td>
                                    <td>
                                        <% if (associate.logo) { %>
                                            <img src="/uploads/<%= associate.logo %>" style="height:50px;">
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (associate.companyVisitingCard) { %>
                                            <img src="/uploads/<%= associate.companyVisitingCard %>" style="height:50px;">
                                        <% } %>
                                    </td>
                                    <td>
                                        <%= associate.created_at ? associate.created_at.toISOString().slice(0,19).replace('T',' ') : '' %>
                                    </td>
                                    <td>
                                          <a href="/admin/associates/view/<%= associate.id %>" class="btn btn-info btn-sm">View</a>
                                        <form action="/admin/associates/approve/<%= associate.id %>" method="POST" style="display:inline-block;">
                                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                        </form>
                                        <form action="/admin/associates/reject/<%= associate.id %>" method="POST" style="display:inline-block;">
                                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="text-center">No pending associates found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
