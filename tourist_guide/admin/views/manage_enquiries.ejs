<style>
    .pagination {
        margin-top: 20px;
    }

    .pagination .page-item .page-link {
        border-radius: 8px;
        margin: 0 3px;
        color: #0d6efd;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .pagination .page-item .page-link:hover {
        background-color: #0d6efd;
        color: #fff;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    }

    .pagination .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
        color: #fff;
        font-weight: bold;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
    }
</style>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>
        <%= title %>
    </title>
    <meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no" name="viewport" />
    <link rel="icon" href="/admin/img/kaiadmin/favicon.ico" type="image/x-icon" />

    <script src="/admin/js/plugin/webfont/webfont.min.js"></script>
    <script>
        WebFont.load({
            google: { families: ["Public Sans:300,400,500,600,700"] },
            custom: {
                families: [
                    "Font Awesome 5 Solid",
                    "Font Awesome 5 Regular",
                    "Font Awesome 5 Brands",
                    "simple-line-icons",
                ],
                urls: ["/admin/css/fonts.min.css"],
            },
            active: function () {
                sessionStorage.fonts = true;
            },
        });
    </script>

    <link rel="stylesheet" href="/admin/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/admin/css/plugins.min.css" />
    <link rel="stylesheet" href="/admin/css/kaiadmin.min.css" />
</head>

<body>
    <div class="wrapper">

        <div class="wrapper">
            <!-- Sidebar -->
            <%- include('./partials/sidebar') %>

                <!-- Main content -->
                <div class="main-content">
                    <%- include('./partials/navbar') %>

                        <div class="container-fluid p-3">
                            <!-- Page Header -->
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h2 class="page-title">Manage Guides</h2>
                            </div>

                            <!-- Table -->
                            <div class="table-responsive shadow p-3 bg-white rounded">
                                <table class="table table-striped table-bordered align-middle mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Message</th>
                                            <th>Created At</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (enquiries.length> 0) { %>
                                            <% enquiries.forEach((enquiry, index)=> { %>
                                                <tr>
                                                    <td>
                                                        <%= index + 1 %>
                                                    </td>
                                                    <td>
                                                        <%= enquiry.name %>
                                                    </td>
                                                    <td>
                                                        <%= enquiry.email %>
                                                    </td>
                                                    <td>
                                                        <%= enquiry.message %>
                                                    </td>
                                                    <td>
                                                        <%= enquiry.created_at.toLocaleString() %>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="5" class="text-center">No enquiries found</td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                                <nav aria-label="Guide Pagination">
                                    <ul class="pagination justify-content-center mt-4">
                                        <% if (currentPage> 1) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=<%= currentPage - 1 %>">« Previous</a>
                                            </li>
                                            <% } %>

                                                <% for (let i=1; i <=totalPages; i++) { %>
                                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                        <a class="page-link" href="?page=<%= i %>">
                                                            <%= i %>
                                                        </a>
                                                    </li>
                                                    <% } %>

                                                        <% if (currentPage < totalPages) { %>
                                                            <li class="page-item">
                                                                <a class="page-link"
                                                                    href="?page=<%= currentPage + 1 %>">Next »</a>
                                                            </li>
                                                            <% } %>
                                    </ul>
                                </nav>

                            </div>

                            <!-- Footer -->
                            <footer class="footer">
                                <!-- <div class="container-fluid d-flex justify-content-between"> -->
                                <nav class="pull-left">
                                    <ul class="nav">
                                        <li class="nav-item">
                                            <a class="nav-link" href="https://www.touristguideclub.com">
                                                Visit Site
                                            </a>
                                        </li>

                                    </ul>
                                </nav>
                                <div class="copyright">
                                    2025, made with <i class="fa fa-heart heart text-danger"></i> By
                                    <a href="https://www.wimraw.com">Wimraw</a>
                                </div>
                                <!-- </div> -->
                            </footer>
                        </div>
                </div>
                <script src="/admin/js/core/jquery-3.7.1.min.js"></script>
                <script src="/admin/js/core/popper.min.js"></script>
                <script src="/admin/js/core/bootstrap.min.js"></script>
                <script src="/admin/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>
                <script src="/admin/js/plugin/chart.js/chart.min.js"></script>
                <script src="/admin/js/kaiadmin.min.js"></script>
</body>

</html>