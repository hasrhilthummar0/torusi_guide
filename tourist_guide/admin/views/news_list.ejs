<style>
    .pagination {
        margin-top: 20px;
    }

    .pagination .page-item .page-link {
        border-radius: 8px;
        margin: 0 3px;
        color: #0d6efd;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .pagination .page-item .page-link:hover {
        background-color: #0d6efd;
        color: #fff;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    }

    .pagination .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
        color: #fff;
        font-weight: bold;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
    }
</style>

<%- include('partials/header') %>

    <div class="wrapper">
        <!-- Sidebar -->
        <%- include('partials/sidebar') %>

            <!-- Main content -->
            <div class="main-content">
                <%- include('partials/navbar') %>

                    <div class="container-fluid p-3">
                        <!-- Page Header -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="page-title">Manage Guides</h2>
                            <a href="/admin/guides/add" class="btn btn-primary btn-round">Add Guide</a>
                        </div>

                        <!-- Table -->
                        <div class="table-responsive shadow p-3 bg-white rounded">
                            <table class="table table-striped table-bordered align-middle mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Image</th>
                                        <th>Status</th>
                                        <th>Created At</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% news.forEach(function(item) { %>
                                        <tr>
                                            <td>
                                                <%= item.id %>
                                            </td>
                                            <td>
                                                <%= item.title %>
                                            </td>
                                            <td>
                                                <%= item.description.substring(0, 50) %>...
                                            </td>
                                            <td>
                                                <img src="<%= item.image ? ('/uploads/blog/' + item.image) : '/uploads/default.png' %>"
                                                    alt="Blog Image"
                                                    style="width:150px; height:100px; object-fit:cover;">
                                            </td>
                                            <td>
                                                <%= item.status %>
                                            </td>
                                            <td>
                                                <%= item.created_at.toISOString().slice(0,19).replace('T',' ') %></td>
            <td>
              <a href="/blogs/edit/<%= item.id %>" class="btn btn-warning btn-sm">Edit</a>
        <a href="/blogs/delete/<%= item.id %>" class="btn btn-danger btn-sm"
   onclick="return confirm('Are you sure you want to delete this news?');">Delete</a>


                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                            <nav aria-label="Guide Pagination">
                                <ul class="pagination justify-content-center mt-4">
                                    <% if (currentPage> 1) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= currentPage - 1 %>">« Previous</a>
                                        </li>
                                        <% } %>

                                            <% for (let i=1; i <=totalPages; i++) { %>
                                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                    <a class="page-link" href="?page=<%= i %>">
                                                        <%= i %>
                                                    </a>
                                                </li>
                                                <% } %>

                                                    <% if (currentPage < totalPages) { %>
                                                        <li class="page-item">
                                                            <a class="page-link"
                                                                href="?page=<%= currentPage + 1 %>">Next »</a>
                                                        </li>
                                                        <% } %>
                                </ul>
                            </nav>

                        </div>

                        <!-- Footer -->
                        <footer class="mt-4 text-center">
                            <p>Visit Site</p>
                            <p>2025, made with ❤️ By Wimraw</p>
                        </footer>
                    </div>
            </div>
    </div>

    <%- include('partials/footer') %>

        </table>
        </div>
        </body>

        </html>