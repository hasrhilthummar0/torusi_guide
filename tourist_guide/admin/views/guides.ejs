<style>
    .pagination {
        margin-top: 20px;
    }

    .pagination .page-item .page-link {
        border-radius: 8px;
        margin: 0 3px;
        color: #0d6efd;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .pagination .page-item .page-link:hover {
        background-color: #0d6efd;
        color: #fff;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    }

    .pagination .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
        color: #fff;
        font-weight: bold;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
    }
</style>

<%- include('partials/header') %>

    <div class="wrapper">
        <!-- Sidebar -->
        <%- include('partials/sidebar') %>

            <!-- Main content -->
            <div class="main-content">
                <%- include('partials/navbar') %>

                    <div class="container-fluid p-3">
                        <!-- Page Header -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="page-title">Manage Guides</h2>
                        </div>

                        <!-- Table -->
                        <div class="table-responsive shadow p-3 bg-white rounded">
                            <table class="table table-striped table-bordered align-middle mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Status</th>
                                        <th>Join Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (guides.length> 0) { %>
                                        <% guides.forEach(guide=> { %>
                                            <tr>
                                                <td>
                                                    <%= guide.id %>
                                                </td>
                                                <td>
                                                    <%= guide.name %>
                                                </td>
                                                <td>
                                                    <%= guide.email %>
                                                </td>
                                                <td>
                                                    <%= guide.mobile %>
                                                </td>
                                                <td>
                                                    <% const status=guide.status ? guide.status.toLowerCase() : '' ; %>
                                                        <% if (status==='active' ) { %>
                                                            <span class="badge bg-success">Active</span>
                                                            <% } else if (status==='inactive' ) { %>
                                                                <span class="badge bg-danger">Inactive</span>
                                                                <% } else if (status==='banned' ) { %>
                                                                    <span class="badge bg-warning">Banned</span>
                                                                    <% } else if (status==='pending' ) { %>
                                                                        <span class="badge bg-secondary">Pending</span>
                                                                        <% } else { %>
                                                                            <span class="badge bg-info">
                                                                                <%= guide.status %>
                                                                            </span>
                                                                            <% } %>

                                                </td>
                                                <td>
                                                    <%= guide.created_at ? guide.created_at.toISOString().slice(0,10)
                                                        : '' %>
                                                </td>
                                                <td>
                                                    <a href="/admin/guides/view/<%= guide.id %>"
                                                        class="btn btn-sm btn-info me-1">View</a>
                                                    <!-- <a href="/admin/guides/edit/<%= guide.id %>"
                                                        class="btn btn-sm btn-warning me-1">Edit</a> -->
                                                    <a href="/admin/guides/delete/<%= guide.id %>"
                                                        class="btn btn-sm btn-danger"
                                                        onclick="return confirm('Are you sure you want to delete this guide?');">Delete</a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="7" class="text-center">No guides found.</td>
                                                    </tr>
                                                    <% } %>
                                </tbody>

                            </table>
                            <nav aria-label="Guide Pagination">
                                <ul class="pagination justify-content-center mt-4">
                                    <% if (currentPage> 1) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= currentPage - 1 %>">« Previous</a>
                                        </li>
                                        <% } %>

                                            <% for (let i=1; i <=totalPages; i++) { %>
                                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                    <a class="page-link" href="?page=<%= i %>">
                                                        <%= i %>
                                                    </a>
                                                </li>
                                                <% } %>

                                                    <% if (currentPage < totalPages) { %>
                                                        <li class="page-item">
                                                            <a class="page-link"
                                                                href="?page=<%= currentPage + 1 %>">Next »</a>
                                                        </li>
                                                        <% } %>
                                </ul>
                            </nav>

                        </div>

                        <!-- Footer -->
                        <footer class="mt-4 text-center">
                            <p>Visit Site</p>
                            <p>2025, made with ❤️ By Wimraw</p>
                        </footer>
                    </div>
            </div>
    </div>

    <%- include('partials/footer') %>